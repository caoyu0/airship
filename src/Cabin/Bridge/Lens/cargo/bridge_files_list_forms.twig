{% set formaction = SETTINGS.link_prefix ~ '/' ~ path_middle ~ '/' ~ cabin ~ '?dir=' ~ current %}
<form action="{{ formaction|e('html_attr') }}" method="post" enctype="multipart/form-data">{{ form_token(formaction) }}
    <div id="bridge_files_new_dir_form">
        <fieldset>
            <legend>Create a New Directory</legend>
            <div class="table full-width">
                <div class="table-cell cell-pad-right">
                    <input type="text" class="full-width" name="directory" {% if _POST.directory %}{#
                        #}{% if form_status.status != "SUCCESS" %}{#
                            #} value="{{ _POST.directory|e('html_attr') }}"{#
                        #}{% endif %}{#
                    #}{% endif %} />
                </div>
                <div class="table-cell table-btn-right">
                    <button type="submit" name="submit_btn" value="new_dir" class="pure-button pure-button-secondary">
                        Create Directory
                    </button>
                </div>
            </div>
        </fieldset>
    </div>
    <div id="bridge_files_upload_form">
        <fieldset>
            <legend>
                Upload Files <a id="add-files"><i class="fa fa-plus-circle"></i> Add Another</a>
            </legend>
            <div class="table full-width">
                <div class="table-cell cell-pad-right">
                    <ul id="new-file-wrapper">
                        <li><input type="file" name="new_files[]" /></li>
                    </ul>
                </div>
                <div class="table-cell text-right vertical-bottom table-btn-right">
                    <button type="submit" name="submit_btn" value="upload" class="pure-button pure-button-secondary">
                        {{  __("Upload Files") }}
                    </button>
                </div>
            </div>
        </fieldset>
    </div>
</form>