{% if can_create() %}
<a href="{{ SETTINGS.link_prefix }}/blog/series/new" class="pure-button pure-button-secondary">
    <i class="fa fa-list-alt"></i>
    {{ __("New Series") }}
</a>
<hr />
{% endif %}
{% if series %}
<div class="table full-width" id="bridge_blog_series_list">
    <div class="table-row table-header">
        <div class="table-cell"></div>
        <div class="table-cell">
            {{ __("Series Name") }}
        </div>
        <div class="table-cell">
            {{ __("Author") }}
        </div>
        <div class="table-cell">
            {{ __("# Items") }}
        </div>
    </div>
    {% for ser in series %}
        <div class="table-row">
            <div class="table-cell table-1-btn-left">
                <a class="pure-button pure-button-primary" href="{{ SETTINGS.link_prefix }}/blog/series/edit/{{ ser.seriesid }}">{#
                    #}<i class="fa fa-pencil"></i>{#
                #}</a>
            </div>
            <div class="table-cell">
                {{ ser.name|e('html') }}
            </div>
            <div class="table-cell">
                <a href="{{ SETTINGS.link_prefix }}/author/edit/{{ ser.author_data.authorid|e('html_attr') }}">{#
                    #}{{ ser.author_data.name|e('html') }}{#
                #}</a>
            </div>
            <div class="table-cell">
                {{ ser.num_items|number_format|e('html') }}
            </div>
        </div>
    {% endfor %}
</div>

<div id="bridge_blog_pagination">
    {% include cargo("bridge_blog_pagination") %}
</div>
{% else %}
    <p>{{ __("There are no series available.") }}</p>
{% endif %}